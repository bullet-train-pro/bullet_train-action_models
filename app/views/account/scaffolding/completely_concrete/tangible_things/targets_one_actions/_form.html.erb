<%= form_with model: targets_one_action, url: (targets_one_action.persisted? ? [:account, targets_one_action] : [:account, @tangible_thing, :targets_one_actions]), local: true, class: 'form' do |form| %>
  <%= render 'account/shared/forms/errors', form: form %>

  <% with_field_settings form: form do %>
    <%= render 'shared/fields/buttons', method: :keep_receipt, html_options: {autofocus: true} %>
    <%= render 'shared/fields/text_field', method: :target_count %>
    <%= render 'shared/fields/text_field', method: :performed_count %>
    <%= render 'shared/fields/super_select', method: :created_by %>
    <%= render 'shared/fields/super_select', method: :approved_by %>
    <%= render 'shared/fields/date_and_time_field', method: :scheduled_for %>
    <%= render 'shared/fields/date_and_time_field', method: :started_at %>
    <%= render 'shared/fields/date_and_time_field', method: :completed_at %>
    <%= render 'shared/fields/text_field', method: :delay %>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
  <% end %>

  <div class="buttons">
    <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
    <% if form.object.persisted? %>
    <%= link_to t('global.buttons.cancel'), [:account, targets_one_action], class: "button-secondary" %>
    <% else %>
    <%= link_to t('global.buttons.cancel'), [:account, @tangible_thing, :targets_one_actions], class: "button-secondary" %>
    <% end %>
  </div>

<% end %>
